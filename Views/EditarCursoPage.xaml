<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuCurso.Views.EditarCursoPage"
             Title="Editar Curso">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <ActivityIndicator IsRunning="{Binding IsBusy}"
                             IsVisible="{Binding IsBusy}"
                             HorizontalOptions="Center"/>

            <VerticalStackLayout IsVisible="{Binding IsNotBusy}" 
                               Spacing="10">
                <!-- Nombre -->
                <Label Text="Nombre del curso"/>
                <Entry Text="{Binding Nombre}"
                       Placeholder="Nombre del curso"/>

                <!-- Enlace -->
                <Label Text="Enlace"/>
                <Entry Text="{Binding Enlace}"
                       Placeholder="https://..."/>

                <!-- Precio -->
                <Label Text="Precio"/>
                <Entry Text="{Binding Precio}"
                       Keyboard="Numeric"
                       Placeholder="0.00"/>

                <!-- Anotaciones -->
                <Label Text="Anotaciones"/>
                <Editor Text="{Binding Anotaciones}"
                        AutoSize="TextChanges"
                        Placeholder="Anotaciones sobre el curso"/>

                <!-- Finalizado -->
                <HorizontalStackLayout Spacing="10">
                    <Label Text="Finalizado"
                           VerticalOptions="Center"/>
                    <CheckBox IsChecked="{Binding Finalizado}"/>
                </HorizontalStackLayout>

                <!-- Mensajes -->
                <Label Text="{Binding ErrorMessage}"
                       IsVisible="{Binding IsErrorVisible}"
                       TextColor="Red"/>

                <!-- Botones -->
                <HorizontalStackLayout Spacing="10" 
                                     HorizontalOptions="Center"
                                     Margin="0,20,0,0">
                    <Button Text="Guardar"
                            Command="{Binding GuardarCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"/>
                    <Button Text="Cancelar"
                            Command="{Binding CancelarCommand}"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
